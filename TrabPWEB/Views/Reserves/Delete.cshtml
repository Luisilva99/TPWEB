@model TrabPWEB.DAL.Reserve

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>Tem a certeza que quer eliminar esta reserva?</h3>
<div>
    <h4>
        @Html.DisplayFor(model => model.StationPost.StationPostName)
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RechargeMod.RechargeModName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RechargeMod.RechargeModName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Completed)
        </dt>

        <dd>
            @if (Model.Completed == 1)
            {
                <p>Em reserva</p>
            }
            else if (Model.Completed == 2)
            {
                <p>Completa</p>
            }
            else if (Model.Completed == 0)
            {
                <p>Cancelada</p>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a lista de Reservas", "Index")
        </div>
    }
</div>
