@model TrabPWEB.DAL.Reserve

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes de Reserva</h2>

<div>
    <h4>
        <b>Nome do Posto de Carregamento: </b>
        @Html.DisplayFor(model => model.StationPost.StationPostName)
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RechargeMod.RechargeModName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RechargeMod.RechargeModName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RechargeMod.RechargeModDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RechargeMod.RechargeModDescription)
        </dd>

        <dt>
            <b>Nome de User</b>
        </dt>

        <dd>
            <p>
                @(((TrabPWEB.Controllers.ReservesController)this.ViewContext.Controller).getUserName(Model.UserId))
            </p>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Completed)
        </dt>

        <dd>
            @if (Model.Completed == 1)
            {
                <p>Em reserva</p>
            }
            else if (Model.Completed == 2)
            {
                <p>Completa</p>
            }
            else if (Model.Completed == 0)
            {
                <p>Cancelada</p>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.ReserveId }) |
    @Html.ActionLink("Voltar para a lista de Reservas", "Index")
</p>
