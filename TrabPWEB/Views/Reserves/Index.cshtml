@model IEnumerable<TrabPWEB.DAL.Reserve>

@{
    ViewBag.Title = "Reserva";
}

<h2>Reserva</h2>

<p>
    @Html.ActionLink("Nova Reserva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StationPostId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StationPostId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocalId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ReserveId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ReserveId }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ReserveId })
        </td>
    </tr>
}

</table>
