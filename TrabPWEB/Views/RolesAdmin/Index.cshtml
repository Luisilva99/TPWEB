@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Nova Role", "Create")
</p>
<table class="table table-hover table-striped w-auto text-center">
    <tr>
        <th class="text-center">
            <b>Nome</b>
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        @if (!item.Name.Equals("Admin"))
        {
            <td>

            @Html.DisplayFor(modelItem => item.Name)
            
           </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                <a href="@Url.Action("Delete", "RolesAdmin", new { @id = item.Id })" onclick="return confirm('Tem a certeza que quer remover a role @item.Name');">Apagar</a>
            </td>
        }
    </tr>
    }

</table>
