@model IEnumerable<TrabPWEB.DAL.StationPost>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped w-auto">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StationPostName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeData)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StationPostName)
        </td>
        <td>
            <div class="table-responsive">
                <table class="table table-striped w-auto table-bordered">
                    @foreach (var itemTime in item.TimeData)
                    {
                        <tr>
                            <td>
                                <b>Hora: </b>
                                @Html.DisplayFor(modelItemTime => itemTime.Time, "{0:HH:mm}")
                            </td>
                            @if (itemTime.Status)
                            {
                                <td><b>Disponibilidade: </b>Disponível</td>
                            }
                            else
                            {
                                <td><b>Disponibilidade: </b>Indisponível</td>
                            }
                        </tr>
                    }
                </table>
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.StationPostId }) |
            @Html.ActionLink("Details", "Details", new { id = item.StationPostId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StationPostId })
        </td>
    </tr>
}

</table>
