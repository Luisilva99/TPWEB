@model IEnumerable<TrabPWEB.DAL.StationPost>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StationPostName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeHour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StationPostName)
        </td>
        <td>
            <ul>
                @foreach (var itemTime in item.TimeHour)
                {
                    <li>
                        @Html.DisplayFor(modelItem => itemTime.Time, "{0:HH:mm}")
                    </li>
                    <li>
                        @Html.DisplayFor(modelItem => itemTime.Status)
                    </li>
                }
            </ul>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.StationPostId }) |
            @Html.ActionLink("Details", "Details", new { id = item.StationPostId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StationPostId })
        </td>
    </tr>
}

</table>
