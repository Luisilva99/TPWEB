@model IEnumerable<TrabPWEB.Models.ApplicationUser>

@{
    ViewBag.Title = "Utilizadores";
}

<h2>Utilizadores</h2>

<p>
    @Html.ActionLink("Novo Utilizador", "Create")
</p>
<table class="table table-hover table-striped w-auto text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="text-center">
            <b>Saldo de Conta</b>
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                <p>
                    @(((UsersAdminController)this.ViewContext.Controller).getUserSaldo(item.Id)) €
                </p>
            </td>
            <td class="text-nowrap">
                @Html.ActionLink("Adicionar 10€", "AddMoney", new { id = item.Id, valueToAdd = new decimal(10.00) }) |
                @Html.ActionLink("Adicionar 5€", "AddMoney", new { id = item.Id, valueToAdd = new decimal(5.00) }) |
                @Html.ActionLink("Adicionar 1€", "AddMoney", new { id = item.Id, valueToAdd = new decimal(1.00) }) |
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
